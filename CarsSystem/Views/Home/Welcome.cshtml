@model  Tuple<IEnumerable<Model.NewsInfo>, IEnumerable<Model.ApplicationInfo>>
@{
    Layout = null;
}

<!DOCTYPE HTML>
<html>
<head>
<meta charset="utf-8">
<meta name="renderer" content="webkit|ie-comp|ie-stand">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
<meta http-equiv="Cache-Control" content="no-siteapp" />
<!--[if lt IE 9]>
<script type="text/javascript" src="lib/html5shiv.js"></script>
<script type="text/javascript" src="lib/respond.min.js"></script>
<![endif]-->
<link rel="stylesheet" type="text/css" href="~/Content/static/h-ui/css/H-ui.min.css" />
<link rel="stylesheet" type="text/css" href="~/Content/static/h-ui.admin/css/H-ui.admin.css" />
<link rel="stylesheet" type="text/css" href="~/Content/lib/Hui-iconfont/1.0.8/iconfont.css" />
<link rel="stylesheet" type="text/css" href="~/Content/static/h-ui.admin/skin/default/skin.css" id="skin" />
<link rel="stylesheet" type="text/css" href="~/Content/static/h-ui.admin/css/style.css" />
<!--[if IE 6]>
<script type="text/javascript" src="lib/DD_belatedPNG_0.0.8a-min.js" ></script>
<script>DD_belatedPNG.fix('*');</script>
<![endif]-->
<title>我的桌面</title>
</head>
<body>
<div class="page-container">
	<p class="f-20 text-success">欢迎使用单位派遣公务用车管理系统 <span class="f-14">v1.0</span>后台！</p>
	<p>欢迎您：</p>
	<p>注册时间：2019-4-14 11:19:55  上次登录时间：2019-4-14 11:19:55</p>

    <table class="table table-border table-bordered table-bg mt-20">
		<thead>
            <tr>
                <th colspan="3" scope="col">新闻通知</th>
               
			</tr>
			<tr>
                <th width="100">发布人</th>
                <th width="100">发布时间</th>
				<th width="400">新闻通知标题</th>
			</tr>
		</thead>
		<tbody>


            @if (Model.Item1.Where(u => u.Type == 1).Count()==0)
            {
                <tr><td colspan="3" >暂无新闻通知</td></tr>
            }
            else
            {
                foreach (var ni in Model.Item1.Where(u => u.Type == 1))
                {
                    <tr>
                    <td>@ni.Name</td>
                    <td>@ni.EditDate.ToString("yyyy年MM月dd日 HH:mm")</td>
				    <td><a onclick="Show('@ni.Title ' ,@ni.ID)">@ni.Title</a></td>
			    </tr>
                }
            }

        </tbody>
    </table>


    <table class="table table-border table-bordered table-bg mt-20">
		<thead>
            <tr>
                <th colspan="3" scope="col">规章制度</th>
               
			</tr>
			<tr>
                <th width="100">发布人</th>
                <th width="100">发布时间</th>
				<th width="400">规章制度标题</th>
			</tr>
		</thead>
		<tbody>
            @if (Model.Item1.Where(u => u.Type == 2).Count()==0)
            {
                <tr><td colspan="3" >暂无规章制度</td></tr>
            }
            else
            {
                foreach (var ni in Model.Item1.Where(u => u.Type == 2))
                {
                    <tr>
                    <td>@ni.Name</td>
                    <td>@ni.EditDate.ToString("yyyy年MM月dd日 HH:mm")</td>
				    <td><a onclick="Show('@ni.Title ' ,@ni.ID)">@ni.Title</a></td>
			    </tr>
                }
            }

        </tbody>
    </table>


    
    <table class="table table-border table-bordered table-bg mt-20" >
		<thead>
			<tr>
				<th colspan="6" scope="col">等待审批用车</th>
			</tr>
            <tr>
                <th>申请编号</th>
				<th>申请日期</th>
                <th>申请人</th>
                <th>申请部门</th>
                <th>出发地点</th>
                <th>目的地点</th>
			</tr>
		</thead>
		<tbody>
            @if (Model.Item2.Where(u => u.Status == 1).Count()==0)
            {
                <tr><td colspan="6" >暂无等待审批</td></tr>
            }
            else
            {
                  foreach (var ni in Model.Item2.Where(u => u.Status == 1))
                  {
                    <tr>
                        <td>@ni.Number</td>
                        <td>@ni.ApplicationDate.ToString("yyyy年MM月dd日 HH:mm")</td>
				        <td>@ni.AppName</td>
                        <td>@ni.Department</td>
                        <td>@ni.Origin</td>
                        <td>@ni.Destination</td>
			        </tr>
                 }
             }

        </tbody>
    </table>


    <table class="table table-border table-bordered table-bg mt-20" >
		<thead>
			<tr>
				<th colspan="9" scope="col">审批通过-在途汽车信息</th>
			</tr>
            <tr>
                <th>申请编号</th>
				<th>申请日期</th>
                <th>申请人</th>
                <th>申请部门</th>
                <th>出发地点</th>
                <th>目的地点</th>
                <th>车牌号</th>
                <th>司机</th>
                <th>审批人</th>

			</tr>
		</thead>
		<tbody>
            @if (Model.Item2.Where(u => u.Status == 3).Count()==0)
            {
                <tr><td colspan="9" >暂无等待审批</td></tr>
            }
            else
            {
                  foreach (var ni in Model.Item2.Where(u => u.Status == 3))
                {
                    <tr>
                        <td>@ni.Number</td>
                        <td>@ni.ApplicationDate.ToString("yyyy年MM月dd日 HH:mm")</td>
				        <td>@ni.AppName</td>
                        <td>@ni.Department</td>
                        <td>@ni.Origin</td>
                        <td>@ni.Destination</td>
                        <td>@ni.LicencePlate</td>
                        <td>@ni.DriverName</td>
                        <td>@ni.LeadName</td>
			        </tr>
             }
            }
        </tbody>
    </table>



	
</div>
<footer class="footer mt-20">
	<div class="container">
		<p><br>
			Copyright &copy;2015-2019 H-ui.admin v3.1 All Rights Reserved.<br>
			
	</div>
</footer>
<script type="text/javascript" src="~/Content/lib/jquery/1.9.1/jquery.min.js"></script> 
    <script type="text/javascript" src="~/Content/lib/layer/2.4/layer.js"></script>
<script type="text/javascript" src="~/Content/static/h-ui/js/H-ui.min.js"></script> 
    <script type="text/javascript" src="~/Content/static/h-ui.admin/js/H-ui.admin.js"></script> 
    <script>
        /*管理员-角色-编辑*/
        function Show(title, id) {
            layer_show(title, "/Newsinfo/ShowNew/" + id);
        }
    </script>
</body>
</html>