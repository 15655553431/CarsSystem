<script type="text/javascript" src="~/Content/lib/jquery.validation/1.14.0/jquery.validate.js"></script> 
<script type="text/javascript" src="~/Content/lib/jquery.validation/1.14.0/validate-methods.js"></script> 
<script type="text/javascript" src="~/Content/lib/jquery.validation/1.14.0/messages_zh.js"></script> 
<script type="text/javascript" src="~/Content/lib/layui/layui.js"></script>
<script type="text/javascript">



    $(function () {

        $('.skin-minimal input').iCheck({
            checkboxClass: 'icheckbox-blue',
            radioClass: 'iradio-blue',
            increaseArea: '20%'
        });

        $("#form-admin-add").validate({
            rules: {

                Number: {
                    required: true,
                    minlength: 1,
                    maxlength: 20
                },
                LicencePlate: {
                    required: true,
                    minlength: 4,
                    maxlength: 10
                },
                Seating: {
                    required: true,
                    number: true,
                    minlength: 1,
                    maxlength: 3
                },
                CarModel: {
                    required: true,
                    minlength: 1,
                    maxlength: 20
                },
                CarBrand: {
                    required: true,
                    minlength: 1,
                    maxlength: 20
                },
                CarColor: {
                    required: true,
                    minlength: 1,
                    maxlength: 20
                },
                OilWear: {
                    required: true,
                    number: true,
                    minlength: 1,
                    maxlength: 4
                },
                Mileage: {
                    required: true,
                    number: true,
                    minlength: 1,
                    maxlength: 7
                },
            },
            onkeyup: false,
            focusCleanup: true,
            success: "valid",
            submitHandler: function (form) {
                $(form).ajaxSubmit({
                    type: 'post',
                    url: "/CarsInfo/Create",
                    success: function (data) {
                        if (data == "ok") {
                            layer.msg('添加成功!', { icon: 1, time: 1000 });
                            setTimeout(function () {  //使用  setTimeout（）方法设定定时2000毫秒
                                var index = parent.layer.getFrameIndex(window.name);
                                parent.location.reload(); // 父页面刷新
                                parent.$('.btn-refresh').click();
                                parent.layer.close(index);
                            }, 1000);
                        }
                        else {
                            layer.msg('添加失败!', { icon: 2, time: 1000 });
                        }
                    },
                    error: function (XmlHttpRequest, textStatus, errorThrown) {
                        layer.msg('error!', { icon: 1, time: 1000 });
                    }
                });

            }
        });
    });
</script> 
<!--/请在上方写此页面业务相关的脚本-->
