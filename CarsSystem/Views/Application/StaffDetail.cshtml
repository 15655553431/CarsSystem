@model Model.ApplicationInfo

@{
    Layout = null;
}

<!DOCTYPE HTML>
<html>
<head>
<meta charset="utf-8">
<meta name="renderer" content="webkit|ie-comp|ie-stand">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
<meta http-equiv="Cache-Control" content="no-siteapp" />
<!--[if lt IE 9]>
<script type="text/javascript" src="~/lib/html5shiv.js"></script>
<script type="text/javascript" src="~/lib/respond.min.js"></script>
<![endif]-->
<link rel="stylesheet" type="text/css" href="~/Content/static/h-ui/css/H-ui.min.css" />
<link rel="stylesheet" type="text/css" href="~/Content/static/h-ui.admin/css/H-ui.admin.css" />
<link rel="stylesheet" type="text/css" href="~/Content/lib/Hui-iconfont/1.0.8/iconfont.css" />
<link rel="stylesheet" type="text/css" href="~/Content/static/h-ui.admin/skin/default/skin.css" id="skin" />
<link rel="stylesheet" type="text/css" href="~/Content/static/h-ui.admin/css/style.css" />
<link rel="stylesheet" type="text/css" href="~/Content/lib/layui/css/layui.css"  />
<!--[if IE 6]>
<script type="text/javascript" src="lib/DD_belatedPNG_0.0.8a-min.js" ></script>
<script>DD_belatedPNG.fix('*');</script>
<![endif]-->
<title>申请用车</title>
</head>
<body>
<article class="page-container">
	<form class="form form-horizontal" id="form-admin-add">
	
	<div class="row cl">
		<label class="form-label col-xs-4 col-sm-3">出发地点：</label>
		<div class="formControls col-xs-8 col-sm-9">
			@Model.Origin
		</div>
	</div>
    <div class="row cl">
		<label class="form-label col-xs-4 col-sm-3">目的地点：</label>
		<div class="formControls col-xs-8 col-sm-9">
			@Model.Destination
		</div>
	</div>
    <div class="row cl">
		<label class="form-label col-xs-4 col-sm-3">行驶距离：</label>
		<div class="formControls col-xs-8 col-sm-9">
			@Model.Distance KM
		</div>
	</div>

    <div class="row cl">
		<label class="form-label col-xs-4 col-sm-3">申请时间：</label>
		<div class="formControls col-xs-8 col-sm-9">
			@Model.ApplicationDate.ToString("yyyy年MM月dd日 HH:mm")
		</div>
	</div>

    <div class="row cl">
		<label class="form-label col-xs-4 col-sm-3">结束时间：</label>
		<div class="formControls col-xs-8 col-sm-9">
			@Model.EndDate.ToString("yyyy年MM月dd日 HH:mm")
		</div>
	</div>

    <div class="row cl">
		<label class="form-label col-xs-4 col-sm-3">申请部门：</label>
		<div class="formControls col-xs-8 col-sm-9">
			@Model.Department
		</div>
	</div>

    <div class="row cl">
		<label class="form-label col-xs-4 col-sm-3">申请人：</label>
		<div class="formControls col-xs-8 col-sm-9">
			@Model.AppName
		</div>
	</div>

    <div class="row cl">
		<label class="form-label col-xs-4 col-sm-3">用车理由：</label>
		<div class="formControls col-xs-8 col-sm-9">
			@Model.Reason
		</div>
	</div>

        <div class="row cl">
		<label class="form-label col-xs-4 col-sm-3"></label>
		<div class="formControls col-xs-8 col-sm-9">
			<a class="btn btn-primary radius" href="/Application/downawait/@Model.ID" >&nbsp;&nbsp;下载申请单&nbsp;&nbsp; </a>
		</div>
	</div>
	</form>
</article>

</body>
</html>