<script type="text/javascript" src="~/Content/lib/jquery.validation/1.14.0/jquery.validate.js"></script> 
<script type="text/javascript" src="~/Content/lib/jquery.validation/1.14.0/validate-methods.js"></script> 
<script type="text/javascript" src="~/Content/lib/jquery.validation/1.14.0/messages_zh.js"></script> 
<script type="text/javascript" src="~/Content/lib/layui/layui.js"></script>
<script type="text/javascript">

    function getcguidselect() {
        var select = window.document.getElementById("CGUID");
        $.ajax({
            //几个参数需要注意一下
            type: "POST",//方法类型
            dataType: "json",//预期服务器返回的数据类型
            url: "/CarsInfo/GetCarsInfo",//url
            data: { sreach: $('#seacher').val() },
            success: function (data) {
                select.options.length = 0;
                if (data == "null") {
                    select.add(new Option("暂无空闲车辆", ""));
                }
                else {
                    for (var i = 0; i < data.length; i++) {
                        select.add(new Option(data[i].LicencePlate + "(" + data[i].Number + "号" + data[i].Seating + "座)", data[i].GUID));
                    }
                }

            },
            error: function (data) {
            }

        });
    }


    function getduguidselect() {
        var select = window.document.getElementById("DriverUGUID");
        $.ajax({
            //几个参数需要注意一下
            type: "POST",//方法类型
            dataType: "json",//预期服务器返回的数据类型
            url: "/UserInfo/GetDriversInfo",//url
            data: { sreach: $('#seacher').val() },
            success: function (data) {
                select.options.length = 0;
                if (data == "null") {
                    select.add(new Option("暂无空闲司机", ""));
                }
                else {
                    for (var i = 0; i < data.length; i++) {
                        select.add(new Option(data[i].Name + "(" + data[i].Login + ")", data[i].GUID));
                    }
                }

            },
            error: function (data) {
            }

        });
    }





    $(function () {


        getcguidselect();
        getduguidselect();



        $('.skin-minimal input').iCheck({
            checkboxClass: 'icheckbox-blue',
            radioClass: 'iradio-blue',
            increaseArea: '20%'
        });

        $("#form-admin-add").validate({
            rules: {

                CGUID: {
                    required: true,
                    
                },
                DriverUGUID: {
                    required: true,
                    

                },
                

            },
            onkeyup: false,
            focusCleanup: true,
            success: "valid",
            submitHandler: function (form) {
                $(form).ajaxSubmit({
                    type: 'post',
                    url: "/Application/Pass",
                    success: function (data) {
                        if (data == "ok") {
                            layer.msg('审批成功!', { icon: 1, time: 1000 });
                            setTimeout(function () {  //使用  setTimeout（）方法设定定时2000毫秒
                                var index = parent.layer.getFrameIndex(window.name);
                                parent.location.reload(); // 父页面刷新
                                parent.$('.btn-refresh').click();
                                parent.layer.close(index);
                            }, 1000);
                        }
                        else {
                            layer.msg('审批失败！权限不足！', { icon: 2, time: 1000 });
                        }
                    },
                    error: function (XmlHttpRequest, textStatus, errorThrown) {
                        layer.msg('error!', { icon: 1, time: 1000 });
                    }
                });

            }
        });
    });
</script> 
<!--/请在上方写此页面业务相关的脚本-->
</body>
</html>