<title>申请用车</title>
</head>
<body>
<article class="page-container">
	<form class="form form-horizontal" id="form-admin-add">
	    @Html.HiddenFor(m=>m.ID)
        @Html.HiddenFor(m=>m.GUID)
	


        <div style="border:2px solid #429842;border-radius:6px;">

            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>安排车辆：</label>
		        <div class="formControls col-xs-8 col-sm-9">
			        <select class="input-text" style="width:200px;" id="CGUID" name="CGUID">
                            <option value=""></option>
                     </select>
		        </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>安排司机：</label>
		        <div class="formControls col-xs-8 col-sm-9">
			        <select class="input-text" style="width:200px;" id="DriverUGUID" name="DriverUGUID">
                            <option value=""></option>
                     </select>
                    <input type="hidden" id="seacher" value="1"/>
		        </div>
            </div>

            <div class="row cl" style="margin-bottom:10px;">
		        <div class="col-xs-8 col-sm-9 col-xs-offset-4 col-sm-offset-3">
			        <input class="btn btn-primary radius" type="submit" value="&nbsp;&nbsp;提交&nbsp;&nbsp;">
		        </div>
	        </div>

        </div>


        <div style="border:2px solid #0B96CD;font-weight:bold;border-radius:6px;margin-top:10px;">   
	        <div class="row cl" style="margin-top:0px;">
		        <label class="form-label col-xs-4 col-sm-3">申请编号：</label>
		        <div class="formControls col-xs-8 col-sm-9 " style="margin-top:3px;">
                    @Model.Number
		        </div>
	        </div>

            <div class="row cl">
		        <label class="form-label col-xs-4 col-sm-3">申请人：</label>
		        <div class="formControls col-xs-8 col-sm-9" style="margin-top:3px;">
                    @Model.AppName
		        </div>
	        </div>

            <div class="row cl">
		        <label class="form-label col-xs-4 col-sm-3">申请部门：</label>
		        <div class="formControls col-xs-8 col-sm-9" style="margin-top:3px;">
                    @Model.Department
		        </div>
	        </div>

            <div class="row cl">
		        <label class="form-label col-xs-4 col-sm-3">出发地点：</label>
		        <div class="formControls col-xs-8 col-sm-9" style="margin-top:3px;">
                    @Model.Origin
		        </div>
	        </div>

            <div class="row cl">
		        <label class="form-label col-xs-4 col-sm-3">目的地点：</label>
		        <div class="formControls col-xs-8 col-sm-9" style="margin-top:3px;">
                    @Model.Destination
		        </div>
	        </div>


            <div class="row cl">
		        <label class="form-label col-xs-4 col-sm-3">行驶距离：</label>
		        <div class="formControls col-xs-8 col-sm-9" style="margin-top:3px;">
                    @Model.Distance Km
		        </div>
	        </div>

            <div class="row cl">
		        <label class="form-label col-xs-4 col-sm-3">申请时间：</label>
		        <div class="formControls col-xs-8 col-sm-9" style="margin-top:3px;">
                    @Model.ApplicationDate.ToString("yyyy年MM月dd日 HH:mm")
		        </div>
	        </div>

            <div class="row cl">
		        <label class="form-label col-xs-4 col-sm-3">用车理由：</label>
		        <div class="formControls col-xs-8 col-sm-9">
			        @Model.Reason
		        </div>
	        </div>
        </div> 

        


		
	</form>
</article>

